<set
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially">

    <objectAnimator
        android:propertyName="strokeAlpha"
        android:valueFrom="0"
        android:valueTo="0"
        android:valueType="floatType"
        android:duration="@integer/activity_done_time" />

    <objectAnimator
        android:propertyName="strokeAlpha"
        android:valueFrom="0"
        android:valueTo="1"
        android:valueType="floatType"
        android:duration="@integer/duration_immediate" />

</set>

